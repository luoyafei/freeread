<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
    "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
    "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
	<definition name = "base" template = "/WEB-INF/views/layout/base_layout.jsp">
		<put-attribute name="header" value= "/WEB-INF/views/header/header.jsp"/>
		<put-attribute name="footer" value= "/WEB-INF/views/footer/footer.jsp"/>
	</definition>
		
	<definition name = "*.page" extends = "base">
		<put-attribute name="body" value= "/WEB-INF/views/body/{1}.jsp"/>
	</definition>
	
</tiles-definitions>